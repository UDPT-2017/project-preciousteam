<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
          Order List
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="#"><i class="fa fa-users"></i> Customers List</a>
            </li>
        </ol>
        <div class="col-lg-12">
            <div class="table-responsive">
                <table id="orderTable" class="table table-bordered table-striped">
                  <thead>
                      <tr >
                          <th>Customer ID</th>
                          <th>Customer's Name</th>
                          <th>Product ID</th>
                          <th>Product's Name</th>
                          <th>Quantity</th>
                      </tr>
                  </thead>
                    <tbody>
                      {{#each orders}}
                        <tr class="table-row" id = "row" >
                            <td id ='i' title = "{{this.customerid}}" class="row">
                              {{this.customerid}}
                            </td>
                            <td id ='e' title = "{{this.uname}}" class="row">
                              {{this.uname}}
                            </td>
                            <td id = 'n' title = "{{this.productid}}" class="row">
                                {{this.productid}}
                            </td>
                            <td id = 'p' title = "{{this.pname}}" class="row">
                                {{this.pname}}
                            </td>
                            <td id = 's' title = "{{this.quantity}}" class="row">
                                {{this.quantity}}
                            </td>
                        </tr>
                      {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->

<script src="js/orders.js"></script>
