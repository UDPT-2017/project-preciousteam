<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
          Mailbox
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="#"><i class="fa fa-users"></i> Mailbox</a>
            </li>
        </ol>
        <div class="col-lg-12">
          <div class="mailbox-content  tab-content tab-content-in">
              <div class="tab-pane active text-style table-responsive " id="tab1">
              <div class="mailbox-border">
                 <div class="mail-toolbar clearfix">
                    <div class="float-right">
                         <div class="clearfix"> </div>
                     </div>
                   </div>
              </div>

                <table class=" table tab-border hover" id="inboxTable" cellspacing="0" width="100%">
                  <thead>
                      <tr>
                        <th style="max-width: 20px">Message ID</th>
                        <th>Email</th>
                        <th>Subject</th>
                        <th>Message</th>
                        <th>Time</th>
                      </tr>
                  </thead>
                    <tbody>
                    {{#each mails}}
                        {{#if this.isreaded}}
                            <tr >
                              <td>
                                {{this.messageid}}
                              </td>
                              <td>
                                {{this.mail}}
                              </td>
                              <td>
                                {{this.subject}}
                              </td>
                              <td>
                                {{this.message}}
                              </td>
                              <td>
                                {{this.time}}
                              </td>
                            </tr>
                          {{else}}
                            <tr id="unread">
                                <td>
                                  {{this.messageid}}
                                </td>
                                <td>
                                  {{this.mail}}
                                </td>
                                <td>
                                  {{this.subject}}
                                </td>
                                <td>
                                  {{this.message}}
                                </td>
                                <td>
                                  {{this.time}}
                                </td>
                            </tr>
                          {{/if}}
                    {{/each}}
                    </tbody>
                </table>
            </div>
          </div>

          <!-- The Modal -->
          <div id="myModal" class="modal">

            <!-- Modal content -->
          <div class="modal-content">
            <div class="modal-header">
              <span class="close">&times;</span>
              <h4 id="sender" ></h4>
            </div>
            <div class="modal-body">
              <b><p id="subject"></p></b>
              <p id ="message"></p>
              <span id="messageid" style="text-align:right"></span>
            </div>
            <div class="modal-footer">
              <h5 id="time"></h5>
            </div>
          </div>

          </div>

        </div>
    </div>
</div>
<!-- /.row -->

<script src="/js/mailbox.js"></script>
