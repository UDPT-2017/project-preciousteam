<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
          Customer List
        </h1>
        <ol class="breadcrumb">
            <li>
                <a href="/customers"><i class="fa fa-users"></i> Customers</a>
            </li>
            <li class="active">
              <a href="#"><i class="fa fa-list"></i> Customers List</a>
            </li>
        </ol>
        <div class="col-lg-12">
            <div class="table-responsive">
                <table id="userTable" class="table table-bordered table-striped">
                  <thead>
                      <tr >
                          <th>UserID</th>
                          <th>Email</th>
                          <th>Name</th>
                          <th>Phone</th>
                          <th>State</th>
                      </tr>
                  </thead>
                    <tbody>
                      {{#each customers}}
                        <tr class="table-row" id = "row" >
                            <td id ='i' title = "{{this.userid}}" class="row">
                              {{this.userid}}
                            </td>
                            <td id ='e' title = "{{this.email}}" class="row">
                              {{this.email}}
                            </td>
                            <td id = 'n' title = "{{this.name}}" class="row">
                                {{this.name}}
                            </td>
                            <td id = 'p' title = "{{this.phone}}" class="row">
                                {{this.phone}}
                            </td>
                            <td id = 's' title = "{{this.state}}" class="row">
                                {{this.state}}
                            </td>
                        </tr>
                      {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->

<script src="js/customers.js"></script>
