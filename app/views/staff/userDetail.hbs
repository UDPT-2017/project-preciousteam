<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
          {{usertype}} Details
        </h1>
        <ol class="breadcrumb">
            <li>
              <i class="fa fa-user-circle"></i> {{usertype}} Management
            </li>
            <li>
              <a href="/staffList"><i class="fa fa-user-circle"></i> {{usertype}} List</a>
            </li>
            <li class="active">
                <a href="#"><i class="fa fa-info-circle"></i> {{usertype}} Details</a>
            </li>
        </ol>
        <div class="col-md-12">
            <div class="card">
                <div data-background-color="purple">
                    <h4 class="title"> {{usertype}}'s information</h4>
                    <br>
                </div>
                <center>
                  <img class="avatar" src="/images/{{avatar_user}}" alt="Avartar">
                </center>
              <form>
                <br>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group ">
                      <label class="control-label">User ID </label>
                      <input id = "uid" type="text" class="form-control" readonly value="{{userid}}">
                    </div>
                  </div>
                  <div class="col-md-6">
          					<div class="form-group">
          						<label class="control-label">Email </label>
          						<input type="email" class="form-control" readonly value = "{{email}}">
          					</div>
                  </div>
              </div>
              <br>
              <div class="row">
                  <div class="col-md-6">
          					<div class="form-group ">
          						<label class="control-label">Name </label>
          						<input type="text" class="form-control" readonly value = "{{name}}">
          					</div>
                  </div>
                  <div class="col-md-6">
          					<div class="form-group ">
          						<label class="control-label">Phone</label>
          						<input type="text" class="form-control" readonly value = "{{phone}}">
          					</div>
                  </div>
              </div>
              <br>
              <button id ="btnAdd" type="button" class="btn btn-danger pull-right">Block User</button>
              <div class="clearfix"></div>
          </form>
        </div>
        </div>
    </div>
</div>
<!-- /.row -->
<script src="/js/userDetail.js"></script>
