<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
          Add staff
        </h1>
        <ol class="breadcrumb">
            <li>
              <i class="fa fa-user-circle"></i> Staff Management
            </li>
            <li class="active">
                <a href="#"><i class="fa fa-user-plus"></i> Add staff</a>
            </li>
        </ol>
        <div class="col-md-12">
            <div class="card">
                <div data-background-color="purple">
                    <h4 class="title">Fill staff 's information</h4>
                </div>
                <center>
                  <img class="avatar" src="/images/User.png" alt="Avartar">
                  <br>
                  <br>
                </center>
              <form >
                <br>
                <div class="row">
                <div class="col-md-6">
        					<div class="form-group">
        						<label class="control-label">Email *</label>
        						<input id = "email" type="email" class="form-control" required>
        					</div>
                </div>
                <div class="col-md-6">
                  <div class="form-group ">
                    <label class="control-label">Password *</label>
                    <input id="pass" type="password" class="form-control" required>
                  </div>
                </div>
              </div>
              <br>
              <div class="row">
                  <div class="col-md-6">
          					<div class="form-group ">
          						<label class="control-label">Fullname</label>
          						<input id="name" type="text" class="form-control" >
          					</div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group ">
                      <label class="control-label">Phone</label>
                      <input id="phone" type="text" class="form-control" >
                    </div>
                  </div>
              </div>
              <br>
              <button id ="btnAdd" type="submit" class="btn btn-primary pull-right">Add</button>
              <div class="clearfix"></div>
          </form>
        </div>
        </div>
    </div>
